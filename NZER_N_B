int NZER_N_B(char a[45], char b[45])
{
	int k = 0;
	for (int i = 0; a[i] != '\0'; ++i)
	{
		if (a[i] - 48 != 0)
			k++;
	}
	if (k==0)
		cout<< "Нет" << endl;
	else
		cout << "Да" << endl;
	k = 0;
	for (int i = 0; b[i] != '\0'; ++i)
	{
		if (b[i] - 48 != 0)
			k++;
	}
	bool m;
	if (k == 0)
	{ 
		m = 0;
		//cout << "Нет" << endl;
	}
	else
	{ 
		m = 1;
		//cout << "Да" << endl;
	}
	return m;
}
